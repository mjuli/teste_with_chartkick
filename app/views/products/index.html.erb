<p id="notice"><%= notice %></p>

<h1>Produtos de Informática</h1>

<div class="row">


  <div class="col-xs-6">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th></th>
          <th>Quantity</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        
        <% @products.order(:name).each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>

            <td><%= link_to '-', menos_url(product) %></td>
            <td><%= product.quantity %></td>
            <td><%= link_to '+', mais_url(product) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>



  <!-- Line Chart - Single Series 
  <div class="col-xs-6">
    <h3>Produtos por quantidade</h3>
    <%= line_chart @products.group(:quantity).count %>
  </div>-->

   <!-- Pie Chart -->
  <div class="col-xs-6">
    <h3>Produtos por quantidade</h3>
    <%= pie_chart @products.group(:name).sum(:quantity) %>
  </div>
</div>

<div class="row">
  <!-- Column Chart --> 
  <div class="col-xs-6">
    <h3>Produtos x Preços</h3>
    <%= column_chart @products.group(:name).sum(:price) %>
  </div>
  <!-- Bar Chart --> 
  <div class="col-xs-6">
    <h3>Produtos x Preços</h3>
    <%= bar_chart @products.group(:name).sum(:price) %>
  </div>
</div>



